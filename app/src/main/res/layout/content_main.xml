<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:id="@+id/content_main"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/padding"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.lapremavera.notification.MainActivity"
    tools:showIn="@layout/app_bar_main">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="20dp"
            android:gravity="top|center">

            <TextView
                android:id="@+id/txtTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:textSize="20sp"
                android:text="@string/title"
                />
            <Button
                android:id="@+id/btnHighPriorityNotification"
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="30sp"
                android:text="@string/high_priority"/>

            <Button
                android:id="@+id/btnBigImageNotification"
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="30sp"
                android:text="@string/big_picture"/>

            <Button
                android:id="@+id/btnNougatNotification"
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="30sp"
                android:text="@string/inbox_type"/>




        </LinearLayout>



    </ScrollView>

</RelativeLayout>
